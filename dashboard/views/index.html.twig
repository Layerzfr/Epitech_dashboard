        {#        Fonction compteur youtube#}
        <script>
            function compteurYoutube(type, time) {
                $.ajax({
                    url: "http://127.0.0.1:3000/youtube/api/channel",
                    dataType: "json",
                    type: "GET",
                    success: function (data) {
                        if (data.error == 401) {
                            window.location.href = "https://accounts.google.com/o/oauth2/v2/auth?scope=https://www.googleapis.com/auth/youtube&response_type=code&state=security_token%3D138r5719ru3e1%26url%3Dhttps%3A%2F%2Foauth2.example.com%2Ftoken&redirect_uri=http%3A//127.0.0.1:3000/youtube/services/callback&client_id=482608527715-8fpkr88gaq0chr2rngoer02i8240baib.apps.googleusercontent.com";
                        }
                        $('#channel').html(data.channelName);
                        $('#type-count').html(type);
                        if (type == "subs") {
                            $("#ytb-count").html(data.subscribersCount);
                        } else {
                            $("#ytb-count").html(data.viewsCount);
                        }
                        $('#compteur-refresh').html(time);
                        let youtube = document.getElementById('youtube-count-container');
                        youtube.classList.replace('none', 'youtube-active');
                        ///$("#youtube-count-container").className.replace('none', 'youtube-active');
                        setTimeout(function () {
                            console.log('refreshed!')
                            compteurYoutube(type, time);
                        }, time * 1000);
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert(xhr.status);
                        alert(thrownError);
                    }

                });
            }

        </script>


        {#        Fonction statistiques youtube#}
        <script>
            function statsYoutube(type, time) {
                $.ajax({
                    url: "http://127.0.0.1:3000/youtube/api/lastStats",
                    dataType: "json",
                    type: "GET",
                    success: function (data) {
                        if (data.error == 401) {
                            window.location.href = "https://accounts.google.com/o/oauth2/v2/auth?scope=https://www.googleapis.com/auth/youtube&response_type=code&state=security_token%3D138r5719ru3e1%26url%3Dhttps%3A%2F%2Foauth2.example.com%2Ftoken&redirect_uri=http%3A//127.0.0.1:3000/youtube/services/callback&client_id=482608527715-8fpkr88gaq0chr2rngoer02i8240baib.apps.googleusercontent.com";
                        }
                        $('#stats-type-count').html(type);
                        if (type == "views") {
                            $('#stats-ytb-count').html(data.views.currentMonth);
                            if (data.views.stats == 0) {
                                $('#diff-ytb-count').html("Soit 0% de plus que le dernier mois");
                            } else {
                                if (data.views.stats >= 1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de plus que le derniers mois");
                                } else if (data.views.stats <= -1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de moins que le derniers mois");
                                } else {
                                    $('#diff-ytb-count').html("Soit " + data.views.stats + " % par rapport au derniers mois");
                                }
                            }
                        } else if (type == "likes") {
                            $('#stats-ytb-count').html(data.likes.currentMonth);
                            if (data.likes.stats == 0) {
                                $('#diff-ytb-count').html("Soit 0% de plus que le dernier mois");
                            } else {
                                if (data.likes.stats >= 1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de plus que le derniers mois");
                                } else if (data.likes.stats <= -1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de moins que le derniers mois");
                                } else {
                                    $('#diff-ytb-count').html("Soit " + data.likes.stats + " % par rapport au derniers mois");
                                }
                            }
                        } else if (type == "dislikes") {
                            $('#stats-ytb-count').html(data.dislikes.currentMonth);
                            if (data.dislikes.stats == 0) {
                                $('#diff-ytb-count').html("Soit 0% de plus que le dernier mois");
                            } else {
                                if (data.dislikes.stats >= 1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de plus que le derniers mois");
                                } else if (data.dislikes.stats <= -1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de moins que le derniers mois");
                                } else {
                                    $('#diff-ytb-count').html("Soit " + data.dislikes.stats + " % par rapport au derniers mois");
                                }
                            }
                        } else {
                            $('#stats-ytb-count').html(data.subs.currentMonth);
                            if (data.subs.stats == 0) {
                                $('#diff-ytb-count').html("Soit 0% de plus que le dernier mois");
                            } else {
                                if (data.subs.stats >= 1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de plus que le derniers mois");
                                } else if (data.subs.stats <= -1000) {
                                    $('#diff-ytb-count').html("Soit > 999,99% de moins que le derniers mois");
                                } else {
                                    $('#diff-ytb-count').html("Soit " + data.subs.stats + " % par rapport au derniers mois");
                                }
                            }
                        }

                        $('#ytb-stats-compteur-refresh').html(time);
                        $("#youtube-stats-container").show();
                        setTimeout(function () {
                            console.log('refreshed!')
                            statsYoutube(type, time);
                        }, time * 1000);
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert(xhr.status);
                        alert(thrownError);
                    }

                });
            }
        </script>

