{% extends 'layout.html.twig' %}


{% block body %}
    <link href="/stylesheets/reseaux.css" rel="stylesheet"/>
    {% if user %}
        <div>
            {{ user.username }}
        </div>
        <a href="/logout">Se déconnecter</a>

        <div class="container-connexion">
            {% if user.oauthTwitter %}
                Twitter: Connecté
                <a href="/twitter/account/tweets">Mes tweets</a>
                <a href="/twitter/sendTweet">Envoyer un tweet</a>
            {% else %}
                <div class="connexion">
                    <div class="icon-reseaux">
                        <svg width="25" height="25" viewBox="0 0 32 32">
                            <path class="twitter-connexion"
                                  d="M32 7.075c-1.175 0.525-2.444 0.875-3.769 1.031 1.356-0.813 2.394-2.1 2.887-3.631-1.269 0.75-2.675 1.3-4.169 1.594-1.2-1.275-2.906-2.069-4.794-2.069-3.625 0-6.563 2.938-6.563 6.563 0 0.512 0.056 1.012 0.169 1.494-5.456-0.275-10.294-2.888-13.531-6.862-0.563 0.969-0.887 2.1-0.887 3.3 0 2.275 1.156 4.287 2.919 5.463-1.075-0.031-2.087-0.331-2.975-0.819 0 0.025 0 0.056 0 0.081 0 3.181 2.263 5.838 5.269 6.437-0.55 0.15-1.131 0.231-1.731 0.231-0.425 0-0.831-0.044-1.237-0.119 0.838 2.606 3.263 4.506 6.131 4.563-2.25 1.762-5.075 2.813-8.156 2.813-0.531 0-1.050-0.031-1.569-0.094 2.913 1.869 6.362 2.95 10.069 2.95 12.075 0 18.681-10.006 18.681-18.681 0-0.287-0.006-0.569-0.019-0.85 1.281-0.919 2.394-2.075 3.275-3.394z"
                            ></path>
                        </svg>
                    </div>
                    <div class="text-reseaux-container-twitter" onclick="location.href='/twitter/sessions/connect'">
                        <p style="margin: auto">Connecter mon compte Twitter</p>
                    </div>
                </div>

            {% endif %}



            {% if user.oauthSpotify %}
                Spotify: connecté
                <a href="/spotify/getUserPlaylist">Ecouter une de mes playlists</a>
            {% else %}
                <div class="connexion">
                    <div class="icon-reseaux">
                        <svg width="25" height="25" viewBox="0 0 32 32">
                            <path class="spotify-connexion"
                                  d="M16 0c-8.8 0-16 7.2-16 16s7.2 16 16 16 16-7.2 16-16-7.119-16-16-16zM23.363 23.119c-0.319 0.481-0.881 0.637-1.363 0.319-3.762-2.319-8.481-2.8-14.081-1.519-0.563 0.163-1.037-0.238-1.2-0.719-0.162-0.563 0.237-1.038 0.719-1.2 6.081-1.363 11.363-0.8 15.519 1.762 0.563 0.238 0.644 0.875 0.406 1.356zM25.281 18.719c-0.4 0.563-1.119 0.8-1.681 0.4-4.319-2.637-10.881-3.438-15.919-1.837-0.638 0.163-1.362-0.163-1.519-0.8-0.162-0.637 0.162-1.363 0.8-1.519 5.838-1.762 13.037-0.881 18 2.163 0.475 0.238 0.719 1.038 0.319 1.594zM25.438 14.238c-5.119-3.037-13.681-3.363-18.563-1.838-0.8 0.238-1.6-0.238-1.838-0.963-0.237-0.8 0.237-1.6 0.963-1.838 5.681-1.681 15.038-1.363 20.962 2.162 0.719 0.4 0.962 1.363 0.563 2.081-0.406 0.556-1.363 0.794-2.087 0.394z"
                            ></path>
                        </svg>
                    </div>
                    <div class="text-reseaux-container-spotify" onclick="location.href='/spotify/sessions/connect'">
                        <p style="margin: auto">Connecter mon compte Spotify</p>
                    </div>
                </div>
            {% endif %}



            {% if user.oauthYoutube %}
                Youtube: connecté
                <a href="/youtube/channel">Channel Informations</a>
                <a href="/youtube/laststats">Statistiques du dernier mois</a>
            {% else %}
                <div class="connexion">
                    <div class="icon-reseaux">
                        <svg width="25" height="25" viewBox="0 0 32 32">
                            <path class="youtube-connexion"
                                  d="M31.681 9.6c0 0-0.313-2.206-1.275-3.175-1.219-1.275-2.581-1.281-3.206-1.356-4.475-0.325-11.194-0.325-11.194-0.325h-0.012c0 0-6.719 0-11.194 0.325-0.625 0.075-1.987 0.081-3.206 1.356-0.963 0.969-1.269 3.175-1.269 3.175s-0.319 2.588-0.319 5.181v2.425c0 2.587 0.319 5.181 0.319 5.181s0.313 2.206 1.269 3.175c1.219 1.275 2.819 1.231 3.531 1.369 2.563 0.244 10.881 0.319 10.881 0.319s6.725-0.012 11.2-0.331c0.625-0.075 1.988-0.081 3.206-1.356 0.962-0.969 1.275-3.175 1.275-3.175s0.319-2.587 0.319-5.181v-2.425c-0.006-2.588-0.325-5.181-0.325-5.181zM12.694 20.15v-8.994l8.644 4.513-8.644 4.481z"
                            ></path>
                        </svg>
                    </div>
                    <div class="text-reseaux-container-youtube" onclick="location.href='/youtube/sessions/connect'">
                        <p style="margin: auto">Connecter mon compte Youtube</p>
                    </div>
                </div>
            {% endif %}



            {% if user.oauthSteam %}
                Steam: Connecté
                <div>
                    <a href="/steam/getCurrentPlayerForGame">Widget nombre de joueur pour un jeu</a>
                </div>
                <div>
                    <a href="/steam/myLibraryPrice">Estimer le prix de ma bibliothèque Steam</a>
                </div>
                <div>
                    <a href="/steam/getfriendlist">Ma liste d'amis Steam</a>
                </div>
            {% else %}
                <div class="connexion">
                    <div class="icon-reseaux">
                        <svg width="25" height="25" viewBox="0 0 32 32">
                            <path class="steam-connexion"
                                  d="M9.498 26.125c0.848 0 1.681-0.41 2.187-1.169 0.804-1.206 0.478-2.836-0.728-3.64l-2.065-1.377c0.353-0.096 0.725-0.149 1.109-0.149 2.325 0 4.209 1.884 4.209 4.209s-1.885 4.209-4.209 4.209c-2.263 0-4.108-1.785-4.205-4.024l2.249 1.499c0.448 0.298 0.953 0.441 1.454 0.441zM26.667 0c2.934 0 5.333 2.4 5.333 5.334v21.332c0 2.936-2.399 5.334-5.333 5.334h-21.333c-2.934 0-5.334-2.398-5.334-5.334v-6.345l3.792 2.528c-0.364 1.974 0.217 4.088 1.744 5.615 2.466 2.466 6.463 2.466 8.929 0 1.515-1.515 2.098-3.607 1.752-5.568l7.783-6.968c1.445-0.207 2.838-0.867 3.95-1.979 2.734-2.734 2.734-7.166 0-9.899s-7.166-2.734-9.9 0c-1.112 1.112-1.771 2.505-1.979 3.95v0l-6.397 9.695c-0.995 0.051-1.981 0.336-2.866 0.856l-6.808-4.539v-8.678c0-2.934 2.4-5.334 5.334-5.334h21.333zM28 9c0-2.761-2.239-5-5-5s-5 2.239-5 5 2.239 5 5 5 5-2.239 5-5zM20 9c0-1.657 1.343-3 3-3s3 1.343 3 3-1.343 3-3 3-3-1.343-3-3z"
                            ></path>
                        </svg>
                    </div>
                    <div class="text-reseaux-container-steam" onclick="location.href='/steam/sessions/connect'">
                        <p style="margin: auto">Connecter mon compte Steam</p>
                    </div>
                </div>
            {% endif %}
        </div>

    {% else %}
        {% block Connexion %}
            <link href="/stylesheets/connexion.css" rel="stylesheet"/>
            <form id="form" class="box" role="form" action="/login" method="post">
                <div class="input-container">
                    <p>Identifiez-vous</p>
                    <div class="input-1">
                        <svg width="25" height="25" viewBox="0 0 24 24" class="icon-form">
                            <path class="icon-path"
                                  d="M12 14.016q2.531 0 5.273 1.102t2.742 2.883v2.016h-16.031v-2.016q0-1.781 2.742-2.883t5.273-1.102zM12 12q-1.641 0-2.813-1.172t-1.172-2.813 1.172-2.836 2.813-1.195 2.813 1.195 1.172 2.836-1.172 2.813-2.813 1.172z"
                            ></path>
                        </svg>
                        <input class="input" type="text" name="username" id="inputEmail" placeholder="Votre nom"
                               required>
                    </div>
                    <div class="line"></div>
                    <div class="input-2">
                        <svg width="25" height="25" viewBox="0 0 32 32" class="icon-form">
                            <path class="icon-path"
                                  d="M15 21.915v0c-0.583-0.206-1-0.762-1-1.415 0-0.828 0.672-1.5 1.5-1.5s1.5 0.672 1.5 1.5c0 0.653-0.417 1.209-1 1.415v2.594c0 0.263-0.224 0.491-0.5 0.491-0.268 0-0.5-0.22-0.5-0.491v-2.594zM8 14v0 0c-1.658 0.005-3 1.34-3 3.009v9.981c0 1.662 1.346 3.009 3.009 3.009h14.982c1.662 0 3.009-1.337 3.009-3.009v-9.981c0-1.659-1.341-3.005-3-3.009v-3.501c0-4.142-3.366-7.499-7.5-7.499-4.142 0-7.5 3.357-7.5 7.499v3.501zM11 14v-3.499c0-2.492 2.015-4.501 4.5-4.501 2.48 0 4.5 2.015 4.5 4.501v3.499h-9z"
                            ></path>
                        </svg>
                        <input class="input" type="password" name="password" id="inputPassword"
                               placeholder="Votre mot de passe">
                    </div>
                    <div class="button-container">
                        <a class="button-connexion" onclick="document.getElementById('form').submit()">Se connecter</a>
                        <a class="button-connexion" href="/register">S'inscrire</a>
                    </div>
                </div>
            </form>

            <script src="/JS/connexion.js"></script>
        {% endblock %}
    {% endif %}
    {#    <p>Coucou</p>#}
{% endblock %}
